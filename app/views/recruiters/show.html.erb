<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @recruiter.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @recruiter.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @recruiter.email %>
</p>

<p>
  <strong>Jobs:</strong>
  <ul>
    <% @recruiter.jobs.each do |job| %>
      <li><%= link_to job.title, job_path(job) %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_recruiter_path(@recruiter) %> |
<%= link_to 'Back', recruiters_path %>
