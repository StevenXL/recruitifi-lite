<div id='header'>
  <%= link_to 'Home', root_path %>
  |
  <% if user_signed_in? %>
    <div id='user'>
      <%= link_to current_user.name, send("#{current_user.class.to_s.downcase}_path", current_user) %>
      <%= link_to 'Sign Out', sessions_destroy_path, data: { method: 'delete', confirm: 'You sure?' } %>
    </div>
  <% else %>
    User not signed in
  <% end %>
</div>
